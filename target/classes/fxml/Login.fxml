<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.courseregistrationsystem.controller.LoginController"
      alignment="CENTER" spacing="10" style="-fx-padding: 20;">

    <Text text="Student Login" style="-fx-font-size: 20px;"/>
    <TextField fx:id="usernameField" promptText="Username"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <HBox alignment="CENTER" spacing="10">
        <Button text="Login" onAction="#handleLoginButtonAction"/>
        <Button text="Sign Up" onAction="#handleSignUpButtonAction"/>
    </HBox>
    <Label fx:id="statusLabel" style="-fx-text-fill: red;"/>
</VBox>